+			 u16 in_size, void *buf_out, u16 *out_size)
+{
+	int err = 0;
+	u8 size = ARRAY_SIZE(hw_cmd_support_vf);
+
+	if (!hinic_mbox_check_cmd_valid(handle, hw_cmd_support_vf, vf_id, cmd,
