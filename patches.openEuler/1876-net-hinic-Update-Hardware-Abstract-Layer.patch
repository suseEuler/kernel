+int hinic_init_comm_ch(struct hinic_hwdev *hwdev)
+{
+	int err;
+	u16 func_id;
+
+	if (IS_BMGW_SLAVE_HOST(hwdev) &&
+	    (!hinic_get_master_host_mbox_enable(hwdev))) {
+		sdk_err(hwdev->dev_hdl, "Master host not initialized\n");
