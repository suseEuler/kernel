+						out_size, 0U);
+		if (err && err != HINIC_DEV_BUSY_ACTIVE_FW &&
+		    err != HINIC_MBOX_PF_BUSY_ACTIVE_FW)
+			sdk_err(((struct hinic_hwdev *)handle)->dev_hdl,
