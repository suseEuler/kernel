-	skb_tmp->queue_mapping = 0;
-	skb_tmp->ip_summed = CHECKSUM_COMPLETE;
-	skb_tmp->dev = netdev;
-
-	for (i = 0; i < cnt; i++) {
-		nic_dev->lb_test_rx_idx = 0;
