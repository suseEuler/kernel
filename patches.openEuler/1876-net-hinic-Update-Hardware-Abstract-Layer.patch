-					  "Compare pkt failed in loopback test(index=0x%02x, data[%d]=0x%02x)\n",
-					  j + i * LP_PKT_CNT,
-					  LP_PKT_LEN - 1,
-					  *(lb_test_rx_buf + j * LP_PKT_LEN +
-					    LP_PKT_LEN - 1));
-				return -EIO;
-			}
-		}
-	}
