+		pr_err("Invalid chip offset value: %d\n", offset);
+		return;
+	}
+
+	if (offset + MAX_DRV_BUF_SIZE <= HINIC_CHIP_FAULT_SIZE)
+		memcpy(chip_fault_stats,
+		       ((struct hinic_hwdev *)hwdev)->chip_fault_stats + offset,
+		       MAX_DRV_BUF_SIZE);
+	else
+		memcpy(chip_fault_stats,
+		       ((struct hinic_hwdev *)hwdev)->chip_fault_stats + offset,
+		       HINIC_CHIP_FAULT_SIZE - offset);
