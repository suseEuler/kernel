+/* for windows */
+bool hinic_eq_intr_handler(void *hwdev, int msix_entry_idx)
+{
+	struct hinic_eq *eq;
+
+	eq = find_eq(hwdev, msix_entry_idx);
+	if (!eq) {
+		pr_err("Can't find eq in eq interrupt handler\n");
+		return false;
+	}
+
+	return eq_irq_handler(eq);
+}
