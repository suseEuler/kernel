-	interrupt_info.pending_cnt = intr_coal->pending_limt;
-	interrupt_info.resend_timer_cnt = intr_coal->resend_timer_cfg;
-
-	err = hinic_set_interrupt_cfg(hwdev, &interrupt_info);
-	if (err) {
-		netif_err(nic_dev, drv, rxq->netdev,
